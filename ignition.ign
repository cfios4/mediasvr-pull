variant: fcos
version: 3.2.0

passwd:
  groups:
    - name: docker

  users:
    - name: casey
      sshAuthorizedKeys:
        - ssh-rsa  casey@GamingPC
      groups: [wheel, docker]

storage:
  disks:
    - device: /dev/sda
      partitions:
        - label: root
          number: 1
          size: 512MB
          startMiB: 2048
          growPart: true
          filesystem: xfs
          wipeFilesystem: true
          mount:
            name: /
            options: [defaults, noatime]

  files:
  - path: /home/casey/downloaded-file.txt
    filesystem: root
    contents:
      source: https://raw.githubusercontent.com/your-username/your-repository/main/downloaded-file.txt
      verification: {}
    mode: 0644
    user:
      id: 1000
      name: casey
    group:
      id: 1000
      name: casey

  - path: /home/casey/.ssh/id_rsa
    filesystem: root
    contents:
      source: https://github.com/cfios4.keys
    mode: 0600
    user:
      id: 1000
      name: casey
    group:
      id: 1000
      name: casey

systemd:
  units:
    - name: etcd-member.service
      enabled: true
      contents: |
        [Unit]
        Description=etcd member
        Documentation=https://github.com/coreos/etcd
        [Service]
        ExecStart=/usr/bin/etcd
        Restart=always
        [Install]
        WantedBy=multi-user.target
        
ignition:
  config:
    replace:
      source: http://example.com/myconfig.ign
    append:
      - source: http://example.com/append.ign
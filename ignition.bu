variant: fcos
version: 3.2.0

ignition:
  config:
    replace:
      source: http://example.com/myconfig.ign
    append:
      - source: http://example.com/append.ign

passwd:
  groups:
    - name: docker

  users:
    - name: casey
      sshAuthorizedKeys:
        - ssh-rsa  casey@GamingPC
      groups: [wheel, docker]

storage:
  disks:
    - device: /dev/sda
      partitions:
        - label: root
          number: 1
          size: 0 # As large as possible
          startMiB: 0 # Start at largest block available
          growPart: true
          filesystem: xfs
          wipeFilesystem: true
          mount:
            name: /
            options: [defaults, noatime]

  files:
    - path: /home/casey/downloaded-file.txt
      contents:
        source: https://raw.githubusercontent.com/your-username/your-repository/main/downloaded-file.txt
      mode: 0644
      user:
        id: 1000
        name: casey
      group:
        id: 1000
        name: casey

  files:
    - path: /etc/hostname
      mode: 420
      overwrite: true
      contents:
        inline: coreos

systemd:
  units:
    - name: etcd-member.service
      enabled: true
      contents: |
        [Unit]
        Description=etcd member
        Documentation=https://github.com/coreos/etcd
        [Service]
        ExecStart=/usr/bin/etcd
        Restart=always
        [Install]
        WantedBy=multi-user.target

networkd:
  units:
    - name: 00-eth.network
      contents: |
        [Match]
        Name=eth0
        [Network]
        DHCP=ipv4
